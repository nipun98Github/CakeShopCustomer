<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InvoiceActivity">


    <Button
        android:id="@+id/oldPrintBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Print"
        tools:layout_editor_absoluteX="261dp"
        tools:layout_editor_absoluteY="20dp" />

    <ir.androidexception.datatable.DataTable
        android:id="@+id/data_table"
        android:layout_width="403dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/oldPrintBtn"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:corner_radius="8dp"
        app:direction="ltr"
        app:header_background_color="#fff"
        app:header_gravity="center"
        app:header_horizontal_padding="0dp"
        app:header_text_color="#000"
        app:header_text_size="3sp"
        app:header_vertical_padding="16dp"
        app:persian_number="false"
        app:row_background_color="#fff"
        app:row_gravity="center"
        app:row_text_color="#000"
        app:row_text_size="3sp"
        app:row_vertical_padding="16dp"
        app:shadow="8dp" />

    <TextView
        android:id="@+id/datetimeL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/data_table"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:textSize="12dp"
        android:textColor="#000"
        />

    <TextView
        android:id="@+id/customer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/datetimeL"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:textSize="12dp"
        android:textColor="#000"
        />

    <TextView
        android:id="@+id/customer_addresNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/customer_name"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:textSize="12dp"
        android:textColor="#000"
        />

    <TextView
        android:id="@+id/customer_addres_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/customer_addresNo"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:textSize="12dp"
        android:textColor="#000"
        />

    <TextView
        android:id="@+id/customer_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/customer_addres_city"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:textSize="12dp"
        android:textColor="#000"
        />

    <TextView
        android:id="@+id/invoice_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/data_table"

        android:layout_marginTop="60dp"
        android:layout_marginStart="300dp"

        android:textSize="12dp"
        android:textColor="#000"
        />

    <TextView
        android:id="@+id/invoice_delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/invoice_sub"

        android:layout_marginTop="5dp"
        android:layout_marginStart="300dp"

        android:textSize="12dp"
        android:textColor="#000"
        />

    <TextView
        android:id="@+id/invoice_tot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/invoice_delivery"

        android:layout_marginTop="5dp"
        android:layout_marginStart="300dp"

        android:textSize="12dp"
        android:textColor="#000"
        />

    <TextView
        android:id="@+id/invoice_docid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="30dp"
        android:layout_marginStart="200dp"
        android:textSize="12dp"
        android:textColor="#000"
        />

</RelativeLayout>