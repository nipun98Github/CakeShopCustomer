<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/my_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
android:layout_marginTop="0dp"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true"
    android:backgroundTint="#4AFB8C00">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="233dp"
        android:padding="15dp">

        <ImageView
            android:id="@+id/wishlistImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="-15dp"
            android:padding="3dp"
            android:src="@drawable/ic_allcake" />

        <TextView
            android:id="@+id/wishListItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/wishlistImage"
            android:text="Product Name"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/wishListItemNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/wishlistImage"
            android:text="Product Note"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/wishListItemPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="60dp"
            android:layout_toRightOf="@id/wishlistImage"
            android:text="Product Price"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="normal" />


        <Button
            android:id="@+id/wishlistRemoveBtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="160dp"
            android:background="#FF0000"
            android:padding="10dp"
            android:text="Remove"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/editTextResult"
            android:layout_width="74dp"
            android:layout_height="40dp"
            android:layout_marginLeft="150dp"

            android:layout_marginTop="100dp"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/wishlistAddToCartBtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="100dp"
            android:background="#9FA59F"
            android:padding="10dp"
            android:text="Add to cart"
            android:textColor="@color/white"
            android:textSize="15dp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>

